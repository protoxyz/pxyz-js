{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".expo/**",
        "dist/**",
        "api/**",
        "build/**",
        "node_modules/.cache/metro/**"
      ]
    },
    "lint": {},
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "clean:workspaces": {
      "cache": false
    },
    "clean:modules": {
      "cache": false
    },
    "type-check": {
      "cache": false
    },
    "update-pxyz": {
      "cache": false
    }
  },

  "globalEnv": [
    "NODE_ENV",
    "PROTOCOL_ENV",
    "VERCEL",
    "VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_ENV",
    "NEXT_PUBLIC_PROTOCOL_ENV",
    "NEXT_PUBLIC_PXYZ_PUBLIC_KEY",
    "NEXT_PUBLIC_PXYZ_DOMAIN",
    "PXYZ_JWT_KEY",
    "PXYZ_DOMAIN",
    "PXYZ_PUBLIC_KEY",
    "PXYZ_SECRET_KEY",
    "PXYZ_TENANT_ID",
    "NEXT_PUBLIC_PXYZ_TENANT_ID",
    "PXYZ_CDN_URL",
    "NEXT_PUBLIC_PXYZ_CDN_URL"
  ]
}
