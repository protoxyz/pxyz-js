{
    "name": "@protoxyz/auth-nextjs",
    "version": "1.0.0",
    "license": "MIT",
    "private": false,
    "homepage": "https://pxyz.dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/protoxyz/pxyz-js.git"
    },
    "bugs": {
        "url": "https://github.com/protoxyz/pxyz-js/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rm -rf .turbo node_modules dist",
        "lint": "tsc --noEmit && eslint \"src/**/*.ts*\"",
        "type-check": "tsc --noEmit",
        "update-pxyz": "pnpm update \"@protoxyz/auth-*\" && pnpm update @protoxyz/types && pnpm update @protoxyz/core"
    },
    "devDependencies": {
        "@protoxyz/config-tsconfig": "github:protoxyz/config-tsconfig",
        "@protoxyz/eslint-config-custom-next": "github:protoxyz/eslint-config-custom-next",
        "@types/node": "^18.14.2",
        "eslint": "^8.32.0",
        "eslint-config-next": "^13.1.1",
        "next": "^13.4.6",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tsup": "^6.2.3",
        "typescript": "^4.9.5"
    },
    "peerDependencies": {
        "next": ">=13",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "dependencies": {
        "@protoxyz/auth-react": "workspace:*",
        "@protoxyz/core": "workspace:*",
        "@protoxyz/themes": "workspace:*",
        "@protoxyz/types": "workspace:*",
        "cookies-next": "^2.1.2",
        "jose": "^4.12.0"
    }
}
